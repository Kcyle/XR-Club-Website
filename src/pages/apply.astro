---
import AppLayout from '../layouts/AppLayout.astro';
const base = import.meta.env.BASE_URL;
---

<AppLayout title="Apply â€” XR Club">
  <div class="closed-page">
    <div class="closed-card">
      <h1 class="closed-title">Applications Closed</h1>
      <p class="closed-desc">Applications are not currently open. Check back soon for the next application cycle.</p>
      <a href={base} class="closed-btn">Back to Home</a>
    </div>
  </div>

  <style>
    .closed-page {
      min-height: 100vh;
      display: flex;
      align-items: center;
      justify-content: center;
      padding: 2rem;
      background: #000;
    }

    .closed-card {
      text-align: center;
      max-width: 480px;
      padding: 3rem 2.5rem;
      background: rgba(255, 255, 255, 0.04);
      border: 1px solid rgba(255, 255, 255, 0.08);
      border-radius: 16px;
      backdrop-filter: blur(12px);
    }

    .closed-title {
      font-family: 'Inter', sans-serif;
      font-size: clamp(1.8rem, 3vw, 2.4rem);
      font-weight: 700;
      letter-spacing: -0.03em;
      color: #fff;
      margin-bottom: 1rem;
    }

    .closed-desc {
      font-family: 'Inter', sans-serif;
      font-size: 1.05rem;
      font-weight: 300;
      color: rgba(255, 255, 255, 0.5);
      line-height: 1.7;
      margin-bottom: 2rem;
    }

    .closed-btn {
      display: inline-block;
      font-family: 'Inter', sans-serif;
      font-size: 1rem;
      font-weight: 500;
      color: #fff;
      background: rgba(255, 255, 255, 0.1);
      border: 1px solid rgba(255, 255, 255, 0.15);
      padding: 0.7rem 2rem;
      border-radius: 980px;
      text-decoration: none;
      transition: all 200ms ease;
    }

    .closed-btn:hover {
      background: rgba(255, 255, 255, 0.15);
      border-color: rgba(255, 255, 255, 0.3);
    }
  </style>
</AppLayout>
